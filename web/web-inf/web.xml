    </servlet>
    <servlet>
        <servlet-name>ValidateBookServlet</servlet-name>
        <servlet-class>BookServlet.ValidateBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BookServlet</servlet-name>
        <url-pattern>/BookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookServlet1</servlet-name>
        <url-pattern>/BookServlet1</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddBookServlet</servlet-name>
        <url-pattern>/AddBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BookDetailServlet</servlet-name>
        <url-pattern>/BookDetailServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DropBookServlet</servlet-name>
        <url-pattern>/DropBookServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DropBooksServlet</servlet-name>
        <url-pattern>/DropBooksServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateBookServlet</servlet-name>
        <url-pattern>/ValidateBookServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
