        <servlet-name>AddBookServlet</servlet-name>
        <servlet-class>BookServlet.AddBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BookDetailServlet</servlet-name>
        <servlet-class>BookServlet.BookDetailServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DropBookServlet</servlet-name>
        <servlet-class>BooksServlet.DropBookServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DropBooksServlet</servlet-name>
